@model List<UserAdd.Models.User>
@{
    ViewBag.Title = "UserList";
}

<h2>UserList</h2>


<div class="panel panel-default">
    <!-- Default panel contents -->
    <div class="panel-heading">Panel heading</div>

    <!-- Table -->
    <table class="table table-striped">
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Phone Number</th>
            <th>Email</th>
            <th>Address</th>
            <th></th>
        </tr>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.FirstName</td>
                <td>@user.LastName</td>
                <td>@user.PhoneNumber</td>
                <td>@user.Email</td>
                <td>@user.Addresses</td>
                <td>@Html.ActionLink("Edit User", "EditContact", new { id = user.ID })</td>
                <td>@Html.ActionLink("Delete User", "DeleteContact", new { id = user.ID })</td>
            </tr>
        }
    </table>
</div>
