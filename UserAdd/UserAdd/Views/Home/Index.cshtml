@model List<UserAdd.Models.User>

@{
    ViewBag.Title = "Search for User";
}

<h2 class="header-page">Add New User</h2>

<div class="header-contener">
    <div id="search-form">
        @Html.Action("Search", "Home")
    </div>
    <a class="btn btn-default"  href="/Home/CreateUser">Add User</a>
</div>
<div id="search-results">
</div>

</br>

<div class="panel panel-default">
    <!-- Default panel contents -->
    <div class="panel-heading">List Of User</div>

    <!-- Table -->
    <table class="table">
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Phone Number</th>
            <th>Email</th>
            <th>Address</th>
            
        </tr>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.FirstName</td>
                <td>@user.LastName</td>
                <td>@user.PhoneNumber</td>
                <td>@user.Email</td>
                <td>@user.Addresses</td>
                <td>@Html.ActionLink("Edit User", "EditContact", new { id = user.ID })</td>
                <td>@Html.ActionLink("Delete User", "DeleteContact", new { id = user.ID })</td>
            </tr>
        }
    </table>
</div>
